            android:layout_below="@id/name"
            android:textSize="10dp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <!-- Layout 4x4, 5x4 -->
    <RelativeLayout
	    android:id="@+id/layout_4_4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
